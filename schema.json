{
    "type": "object",
    "properties": {
        "info": {
            "$ref": "#/definitions/InformationType"
        },
        "pages": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/PageType"
            }
        }
    },
    "required": [
        "info",
        "pages"
    ],
    "definitions": {
        "InformationType": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "icon": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/FileTypeLocal"
                        },
                        {
                            "$ref": "#/definitions/FileTypeRemote"
                        }
                    ]
                },
                "language": {
                    "type": "string"
                }
            },
            "required": [
                "icon",
                "name"
            ]
        },
        "FileTypeLocal": {
            "type": "object",
            "properties": {
                "remote": {
                    "type": "boolean",
                    "enum": [
                        false
                    ]
                },
                "path": {
                    "type": "string"
                }
            },
            "required": [
                "path",
                "remote"
            ]
        },
        "FileTypeRemote": {
            "type": "object",
            "properties": {
                "remote": {
                    "type": "boolean",
                    "enum": [
                        true
                    ]
                },
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "remote",
                "url"
            ]
        },
        "PageType": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "contents": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/FileTypeLocal"
                        },
                        {
                            "$ref": "#/definitions/FileTypeRemote"
                        }
                    ]
                },
                "entryType": {
                    "$ref": "#/definitions/EntryTypes"
                },
                "id": {
                    "type": "string"
                },
                "children": {
                    "description": "The children of a page, a list of IDs in the same JSON structure.\nEach ID must exist in the array of pages, otherwise the Docubus document is invalid.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "contents",
                "entryType",
                "id",
                "title"
            ]
        },
        "EntryTypes": {
            "description": "The different types of entries a page can be. A page can only be one type of entry.",
            "enum": [
                "annotation",
                "attibute",
                "binding",
                "builtin",
                "callback",
                "category",
                "class",
                "command",
                "component",
                "constant",
                "constructor",
                "define",
                "delegate",
                "diagram",
                "directive",
                "element",
                "entry",
                "enum",
                "environment",
                "error",
                "event",
                "exception",
                "extension",
                "field",
                "file",
                "framework",
                "function",
                "global",
                "guide",
                "hook",
                "instance",
                "instruction",
                "interface",
                "keyword",
                "library",
                "literal",
                "macro",
                "method",
                "mixin",
                "modifier",
                "module",
                "namespace",
                "notation",
                "object",
                "operator",
                "option",
                "package",
                "parameter",
                "plugin",
                "procedure",
                "property",
                "protocol",
                "provider",
                "provisioner",
                "query",
                "record",
                "resource",
                "sample",
                "section",
                "service",
                "setting",
                "shortcut",
                "statement",
                "struct",
                "style",
                "subroutine",
                "tag",
                "test",
                "trait",
                "type",
                "union",
                "value",
                "variable",
                "word"
            ],
            "type": "string"
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#"
}